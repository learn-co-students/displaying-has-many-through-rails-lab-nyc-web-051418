<h1><%= @doctor.name %></h1>
<h2><%= @doctor.department %></h2>
<h3>Patients:</h3>
<ol>
  <% @doctor.patients.each do |patient| %>
  <li><%= link_to patient.name, patient_path(patient) %></li>
<% end %>

<h3>Appointments:</h3>
<ol>
  <% @doctor.appointments.each do |appt| %>
  <li><%= appt.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
<% end %>
</ol>
