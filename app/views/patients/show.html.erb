<!-- Create a Patient#index page that displays a link to each patient's show page and the total number of appointments they have. -->

<h1><%= @patient.name %></h1>
<h2>Age: <%= @patient.age %></h2>

<h2>Appointments</h2>
<ol>
  <% @patient.appointments.each do |appt| %>
    <li>
      <%= appt.appointment_datetime.strftime("%B %-d, %Y at %R")%>
      <%= link_to "#{appt.doctor.name}", doctor_path(appt.doctor) %>
    </li>
    <br>
  <% end %>
</ol>
